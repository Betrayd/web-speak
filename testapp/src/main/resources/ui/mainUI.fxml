<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import net.betrayd.webspeaktest.ui.util.ZoomableGraph?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.betrayd.webspeaktest.ui.MainUIController">
   <children>
      <MenuBar VBox.vgrow="NEVER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <center>
            <ZoomableGraph fx:id="zoomGraph" BorderPane.alignment="CENTER" />
         </center>
         <right>
            <VBox alignment="TOP_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <ScrollPane focusTraversable="false" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="playerBox" prefWidth="325.0">
                           <children>
                              <fx:include source="playerInfo.fxml" />
                              <fx:include source="playerInfo.fxml" />
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
                  <Button mnemonicParsing="false" onAction="#addPlayer" text="Add Player">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </right>
         <bottom>
            <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Circle fx:id="serverStatusIcon" fill="RED" radius="12.0" stroke="#0000006c" strokeType="INSIDE" />
                  <Label fx:id="serverStatusText" text="Server Stopped" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="serverAddressText" text="localhost:8080" textFill="#006f12" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="startStopButton" mnemonicParsing="false" onAction="#pressStartStopButton" text="Start Server" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</VBox>
