    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend (Chrome)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/webspeak-frontend"
        },
        {
            "type": "java",
            "name": "Test Server App",
            "request": "launch",
            "mainClass": "net.betrayd.webspeaktest.Entrypoint",
            "projectName": "testapp",
            "console": "internalConsole"
        },
        {
            "type": "java",
            "name": "Relay Server",
            "request": "launch",
            "mainClass": "net.betrayd.webspeak.relay.WebSpeakRelay",
            "projectName": "webspeak-relay",
            "console": "internalConsole"
        }
    ]
}